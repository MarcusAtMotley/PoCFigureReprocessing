/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    PoC Figure Reprocessing - Test Configuration
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Minimal configuration for testing with reduced resources.
----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test configuration'

    // Test with subset of samples
    max_cpus   = 4
    max_memory = '16.GB'
    max_time   = '2.h'
}

process {
    // Override all labels with minimal resources
    withLabel:process_single {
        cpus   = 1
        memory = 2.GB
        time   = 1.h
    }
    withLabel:process_low {
        cpus   = 2
        memory = 4.GB
        time   = 1.h
    }
    withLabel:process_medium {
        cpus   = 2
        memory = 8.GB
        time   = 2.h
    }
    withLabel:process_high {
        cpus   = 4
        memory = 16.GB
        time   = 2.h
    }
}
